function initMap() {

    var locations = [
        ['15XX BLOCK OF BROADWAY', 47.614655488, -122.320789515],
        ['22XX BLOCK OF 1 AV', 47.612990814, -122.345863107],
        ['16XX BLOCK OF 11 AV', 47.615838397, -122.318168851],
        ['8XX BLOCK OF 9 AV', 47.607338845, -122.326381985]
    ];

    var myLatlng = new google.maps.LatLng(47.6097, -122.3331);

    var mapOptions = {
        zoom: 12,
        center: myLatlng
    }
    var map = new google.maps.Map(document.getElementById("map"), mapOptions);

    var marker, i;
    for (i = 0; i < locations.length; i++) {
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map
        });
        google.maps.event.addListener(marker, 'click', (function(marker, i) {
            return function() {
                infowindow.setContent(locations[i][0]);
                infowindow.open(map, marker);
            }
        })(marker, i));
    }
}